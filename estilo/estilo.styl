@import "nib"
@import "slider.styl"
@import "font.styl"

p
  font-weight 300
.u-title
  color #00CCFF
  border-bottom 1px solid  #00CCFF
  font-weight normal
  text-align center
  padding .5em 0
.u-containerDefault
  max-width 800px
  margin 0 auto

.MainMenu
  background #1E1E1E
  text-align center
  height 3.75em
  position fixed
  left 0
  right 0
  top 0
  z-index 3

.MainMenu-list
  margin 0
  padding 0

.MainMenu-item
  display inline-block
.MainMenu-link
  color #00DBFF
  text-decoration none
  line-height 3.75em
  padding 0 1em

.Header
  // margin-top 3.75em
  background-image url('../img/portada.jpg')
  background-repeat no-repeat
  background-position center
  background-size cover
  text-align center
  padding 10em 0
  &-button
    background white
    border none
    border-radius 50%
    display none
    height 40px
    line-height 40px
    outline 0
    padding 0
    position fixed
    right 1em
    top 1em
    width 40px
    z-index 3
    &.is-active
      display block
.Header-imageContainer
  margin 0

.Header-image
  border 5px solid white
  border-radius 50%

.Header-name,
.Header-link
  color white
  padding .5em

.Header-link
  font-size 1.5em
  font-weight bold
  text-decoration none
  transition-duration: 0.3s;
  transition-property: transform;
  transform: scale(1) rotate(0);
  &:hover
    transform: scale(1.05) rotate(5deg);
  &.twitter:hover
    color #569de6
  &.facebook:hover
    color #3e568d

.Header-name
  font-size 2em
  font-weight 300
  margin 0

.Servicios
  color #515151
  &-item
    max-width 25em
    text-align center
  &-itemTitle
    font-weight 300
  &-strong
    font-weight 400
  &-container
    display flex
    flex-wrap wrap
    justify-content space-around
  &-description
    text-align left



.Profile
.Work
  text-align center
  padding 0 1em
  margin-top -4.3em
  &-description
    color #515151
    line-height 2em
.Profile-title
  background white
  border-radius 5px 5px 0 0
.Profile-link
  background orange
  color white
  text-decoration none
  padding .5em 1em
  border-radius 1em
  margin-right .5em
  display inline-block
  margin-bottom 1em
.Work
  margin-top 2em
  text-align center
  &-container
    display flex
    flex-wrap wrap
    justify-content space-around

.Work-item
  display inline-block
  margin-bottom 1.8em
  max-width 15em

.Work-imageContainer
  margin 0

.Work-description
  font-size 1.1em
  color #515151
  font-style italic

.Footer
  background-color #0EC3DE
  background-repeat no-repeat
  background-position center
  image('../img/footer.jpg', w=1024px, h=343px)
  padding 2em 0
  text-align center
  &-link
    color #00CDFF
    font-weight bold
    text-decoration none

.Footer-title
  color white

.Footer-formInput,
.Footer-textarea
  background white
  border none
  display block
  border-radius .5em
  padding .5em
  margin 0 auto 1em
  width 100%
  outline 0

.Footer-textarea
  resize none

.Footer-button
  background orange
  color white
  padding .5em 1em
  border none
  border-radius 1em

.Slider
  background white
  &-container
    max-width 1024px
    margin 0 auto

@media screen and (max-width: 480px)
  .Profile
    &-link
      display block

@media screen and (max-width: 767px)
  .Footer
    &-form
    display block
    &-formInput
    &-textarea
      width 90%
      box-sizing border-box
    &-left
      margin-right 0
  .Header
    margin-top 0
  .MainMenu
    height auto
    left -200px
    width 200px
    transition .3s
    &.is-active
      left 0
    &-item
      display block

